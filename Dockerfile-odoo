FROM odoo:11.0

USER root

# Copy the key content, such as the config file and the enterprise addons
COPY ./odoo.conf /etc/odoo/odoo.conf
COPY /home/felappi/docker/odoo11/extra-addons/ /mnt/extra-addons/
RUN chown odoo:odoo -R /etc/odoo/
RUN chown odoo:odoo -R /mnt/extra-addons/

USER odoo

EXPOSE 8072
